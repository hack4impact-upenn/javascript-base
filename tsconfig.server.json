{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "target": "es2017",
    "isolatedModules": false,
    "noEmit": false
  },
  "include": [
    "./src/backend/**/*.ts",
    "./src/backend/**/*.tsx",
    "./src/backend/**/*.js",
    "./src/backend/**/*.jsx",
    "./src/ssr-server.js"
  ],
  "node": {
    "fs": "empty"
  }
}
